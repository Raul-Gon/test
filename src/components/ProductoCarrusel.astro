---
import CarruselProductos from "./CarruselProductos.astro"

--- 

<div class="w-full h-auto flex flex-col">
    <div class="w-full h-auto bg-cyan-600">
        <div class="max-w-[1200px] mx-8 xl:mx-auto flex flex-row h-full">
            <div class="w-1/2 flex flex-wrap">
                <div class="w-full h-full flex mb-0 mt-8">
                    <img src="/images/img.webp" alt="imagen de prueba" class="mb-0 pb-0">
                </div>
            </div>
            <div class="w-1/2 mb-0 p-5 pb-0">
                <div class="h-full w-full flex flex-col mb-0">
                    <p class="flex flex-wrap text-xs mt-10">
                        Patrocinado   
                        <img src="/images/iconoInformacion.svg" alt="icono informacion" width="16px" height="16px" class="mx-2">
                    </p>
                    <h2 class="mt-3 font-bold text-3xl">MARCA</h2>
                    <h3 class="text-2xl">Eslogan</h3>
                    <p class="mt-[16px]">Descripcion marca</p>
                    <button class="w-72 mt-5 border-2 border-black px-10 py-3 hover:bg-gray-600 hover:text-white">Ver m√°s</button>
                </div>
            </div>
        </div>
    </div>
    <div class="w-full h-auto bg-cyan-800">
        <div class="max-w-[1200px] mx-8 xl:mx-auto  h-auto">
            <div class="mt-5">
                <CarruselProductos /> 
             </div>
            <div class="my-5 flex flex-row items-center justify-start">
                <button class="border-2 border-black py-3 px-4 hover:bg-gray-600 hover:text-white"> + Seguir</button>
                <h2 class="ml-3">Marca</h2>
            </div>
        </div>
    </div>
</div>